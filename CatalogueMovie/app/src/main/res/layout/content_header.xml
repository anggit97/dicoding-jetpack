<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-16dp"
    app:cardCornerRadius="@dimen/dp_24">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_movies"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:contentDescription="@string/imagedescription"
            android:scaleType="centerCrop"
            android:src="@drawable/background_gradient_dark_to_bottom" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:contentDescription="@string/imagedescription"
            android:src="@drawable/background_gradient_dark_to_bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_title_movies"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                tools:text="How To Train Your Dragon" />

            <TextView
                android:id="@+id/tv_subtitle_movies"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:textColor="@color/colorWhite"
                tools:text="How To Train Your Dragon" />

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>